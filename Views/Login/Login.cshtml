@model HospitalERPNew.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .field-validation-error, .validation-summary-errors * {
        color: #721c24;
    }
    .validation-summary-errors{
        display: none;
    }
</style>
<div class="account-page">
    <div class="account-center">
        <div class="account-box">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, htmlAttributes: new { @class = "form-signin" }))
            {
                @Html.ValidationSummary()
                <div class="account-logo">
                    <a href="#"><img src="~/Content/img/logo-dark.png" alt=""></a>
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, htmlAttributes: new { type = "email", required = "required", placeholder = "Your Email", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(x => x.Password)
                    @Html.TextBoxFor(x => x.Password, htmlAttributes: new { type = "password", required = "required", placeholder = "Your Password", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Login" class="btn btn-primary account-btn">
                </div>
            }
        </div>
    </div>
</div>
@section ValidationSection{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
